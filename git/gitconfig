[user]
    name = Hugo Bara√∫na
    email = hugo.barauna@gmail.com
[color]
    status = auto
    diff = auto
    branch = auto
[core]
    excludesfile = ~/.gitignore
    editor = vim

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = interactive

[delta "interactive"]
    navigate = false

[alias]
    st = status -sb
    ci = commit
    co = checkout
    br = branch
    d  = diff
    dc = diff --cached
    timelog = log --pretty=format:'%Cred%h%Creset - %C(yellow)%ae%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=iso
    tree = log --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%ae%Creset - %s%Creset - %Cgreen%cd%Creset'
    # `git log` with patches shown with difftastic.
    dl = -c diff.external=difft log -p --ext-diff
    # Show the most recent commit with difftastic.
    ds = -c diff.external=difft show --ext-diff
    # `git diff` with difftastic.
    dft = -c diff.external=difft diff
#    hp = "!. ~/.githelpers && show_git_head"
#    l = "!. ~/.githelpers && pretty_git_log"
[github]
    user = hugobarauna
[clean]
    requireForce = false
[push]
    default = simple
	autoSetupRemote = true
[browser "gitscm"]
    cmd = /bin/sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
[help]
    browser = gitscm
[credential]
    helper = osxkeychain
[hub]
    protocol = https
[merge]
    ff = false
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[init]
	defaultBranch = main
[fetch]
	prune = true
