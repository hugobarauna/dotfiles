# Livebook
alias lbupdate="git pull && mix deps.get --only prod"
alias lbserver="MIX_ENV=prod LIVEBOOK_LOG_LEVEL=debug LIVEBOOK_DATA_PATH=~/src/tmp/livebook_data LIVEBOOK_APPS_PATH=/Users/hugobarauna/src/tmp/notebooks/apps LIVEBOOK_TOKEN_ENABLED=false mix phx.server"
